{
    "extends": "@baltpeter/tsconfig",
    "include": ["src/**/*", "src/types/ipa-extract-info.d.ts"],
    "compilerOptions": {
        "paths": {
            "*": ["./*", "./src/types/*"]
        }
    },
    "typedocOptions": {
        "plugin": ["typedoc-plugin-markdown"],
        "entryPoints": ["src/index.ts"],
        "out": "docs",
        "readme": "none",
        "excludeNotDocumented": true,
        "includeVersion": false,
        "githubPages": false,
        "gitRevision": "main"
    }
}

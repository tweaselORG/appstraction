{
    "name": "platform-apis",
    "version": "0.0.0",
    "description": "A collection of scripts to interact with mobile platforms.",
    "bugs": "https://github.com/tracking-weasel/platform-apis/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/tracking-weasel/platform-apis.git"
    },
    "license": "MIT",
    "author": "Lorenz Sieben <me@lorenz-sieben.com>",
    "type": "module",
    "main": "dist/index.js",
    "source": "src/index.ts",
    "types": "dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "scripts": {
        "build": "parcel build",
        "fix": "yarn eslint . --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx --fix",
        "lint": "tsc && eslint . --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx && git diff --check",
        "prepack": "rm -rf dist && yarn build && yarn typedoc",
        "test": "echo 'TODO: No tests specified yet.'",
        "watch": "parcel watch"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && tsc && typedoc && git add docs"
        }
    },
    "lint-staged": {
        "*.{ts,js,tsx,jsx,css,scss,json}": [
            "prettier --write"
        ],
        "*.{ts,js,tsx,jsx}": [
            "eslint --fix"
        ]
    },
    "prettier": "@baltpeter/prettier-config",
    "dependencies": {},
    "devDependencies": {
        "@baltpeter/eslint-config": "1.0.0",
        "@baltpeter/prettier-config": "2.0.0",
        "@baltpeter/tsconfig": "1.0.1",
        "@parcel/packager-ts": "2.8.2",
        "@parcel/transformer-typescript-types": "2.8.2",
        "@typescript-eslint/eslint-plugin": "5.48.0",
        "eslint": "8.31.0",
        "eslint-plugin-eslint-comments": "3.2.0",
        "eslint-plugin-import": "2.26.0",
        "husky": "4.3.7",
        "lint-staged": "13.1.0",
        "parcel": "2.8.2",
        "prettier": "2.8.2",
        "typedoc": "0.23.24",
        "typedoc-plugin-markdown": "3.14.0",
        "typescript": "4.9.4"
    }
}
